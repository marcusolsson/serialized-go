{
    "projectionName": "orders",
    "feedName": "order",
    "handlers": [
        {
            "eventType": "OrderCancelledEvent",
            "functions": [
                {
                    "function": "inc",
                    "targetSelector": "$.projection.orders[?]",
                    "eventSelector": "$.event[?]",
                    "targetFilter": "@.orderId == $.event.orderId",
                    "eventFilter": "@.orderAmount > 4000"
                }
            ]
        }
    ]
}